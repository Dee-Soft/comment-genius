{
  "name": "comment-genius",
  "version": "1.0.0",
  "description": "Automated comment generation and cleanup tool for documentation",
  "main": "dist/index.js",
  "bin": {
    "comment-genius": "./bin/cli.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "prepare": "husky && husky install",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "link": "npm run build && npm link"
  },
  "keywords": [
    "documentation",
    "comments",
    "jsdoc",
    "typedoc",
    "automation"
  ],
  "author": "Dee Soft",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "documentation": "^14.0.3",
    "figlet": "^1.9.3",
    "globby": "^14.1.0",
    "inquirer": "^12.9.6",
    "jsdoc": "^4.0.4",
    "ora": "^9.0.0",
    "typedoc": "^0.28.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/globby": "^9.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "jest": "^30.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
